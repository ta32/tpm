{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tpm",
  "version": "0.1.0",
  "identifier": "tpm",
  "build": {
    "frontendDist": "../../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Temporary Password Manager",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo-64x64.png",
      "icons/logo-64x64.ico",
      "icons/logo-256Ã—256.png"
    ]
  }
}
